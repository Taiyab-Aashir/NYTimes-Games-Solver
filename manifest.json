{
  "manifest_version": 3,
  "name": "NYTimes Games Solver",
  "version": "1.0.0",
  "description": "A beautiful extension to explore NYTimes games and puzzles",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.nytimes.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NYTimes Games Solver",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/games*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}
